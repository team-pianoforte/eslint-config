{
  "name": "@pianoforte/eslint-config",
  "version": "0.4.0",
  "description": "Pianoforte style eslint config",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js --ignore-path ../../.gitignore .",
    "rules": "eslint-find-rules -c",
    "unused-rules": "eslint-find-rules -u -n",
    "test": "./node_modules/mocha/bin/mocha --color tests/test.js"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "index.js",
    "eslint-config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/team-pianoforte/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "z@kuro <z@kuro.red>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/team-pianoforte/eslint-config/issues"
  },
  "homepage": "https://github.com/team-pianoforte/eslint-config",
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-rule-tester": "github:zakuro9715/eslint-config-rule-tester#dev",
    "eslint-find-rules": "^3.4.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1"
  }
